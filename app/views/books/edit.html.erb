<div class="col-md-6">
	<h2 class="title">Editing Book</h2>
	<%= form_for(@book) do |f| %>
		<%= render 'layouts/error_messages' %>
		<h6>Title</h6>
		<%= f.text_field :title, class: "hoge", size: 64 %>
		<h6>Opinion</h6>
		<%= f.text_area :body, class: "hoge", size: "62x2" %>

		<%= f.submit('Update Book', class: 'btn btn-primary btn-block active') %>
	<% end %>
	<%= link_to "Show", book_path(@book) %><span> | </span><%= link_to "Back", books_path %>
</div>
