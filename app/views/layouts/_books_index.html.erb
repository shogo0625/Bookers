<div class="col-lg-9">
	<div class="books-index">
		<h2 class="title">Books</h2>
		<table class="books-table table-striped">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
				<tr class="book-contents">
					<td>
						<%= link_to user_path(@user) do %>
						<%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image2.jpg" %>
						<% end %>
					</td>
					<td>
						<%= link_to book_path(book.id) do %>
						<%= book.title %>
						<% end %>
					</td>
					<td><%= book.body %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>