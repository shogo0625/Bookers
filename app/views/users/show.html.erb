<%= render 'layouts/sidebar', books: @books, book: @book, user: @user %>
<div class="col-md-9">
	<div class="books-index">
		<h2 class="title">Books</h2>
		<table class="table">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
			</thead>
			<tbody>
				<% @user.books.each do |book| %>
				<tr class="book-contents">
					<td>
						<%= link_to user_path(@user) do %>
						<%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image2.jpg" %>
						<% end %>
					</td>
					<td>
						<%= link_to "#{book.title}", book_path(book.id) %>
					</td>
					<td><%= book.body %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>